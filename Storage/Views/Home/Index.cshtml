@model IEnumerable<WEB.Models.GoodsViewModel>


@{
    ViewBag.Title = "Index";
}

<h2>Search and buy tickets now!</h2>

@using (Html.BeginForm())
{
    <p>
        TitleGoods: @Html.TextBox("searchString") <br />
        Price: @Html.TextBox("price")<br />
        Count: @Html.TextBox("count")<br />
        Datetime: @Html.TextBox("date")<br />
        <input type="submit" value="Filter" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Order", "MakeOrder", new { id = item.Id })
            </td>
        </tr>
    }

</table>
